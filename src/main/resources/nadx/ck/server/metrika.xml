<?xml version="1.0"?>
<yandex>
    <!-- 集群配置 -->
    <clickhouse_remote_servers>
        <bip_ck_cluster>
            <!-- 数据分片1  -->
            <shard>
                <internal_replication>false</internal_replication>
                <replica>
                    <host>master.ck</host>
                    <port>9000</port>
                    <password>9036011d8fa79028f99488c2de6fdfb09d66beb5e4b8ca5178ee9ff9179ed6a8</password>
                </replica>
            </shard>
        </bip_ck_cluster>
    </clickhouse_remote_servers>
    <!-- 本节点副本名称，创建复制表时有用，每个节点不同，整个集群唯一，建议使用主机名） -->
    <macros>
        <replica>node110</replica>
    </macros>
    <!-- 监听网络 -->
    <networks>
        <ip>::/0</ip>
    </networks>
    <!-- ZK集群  -->
    <zookeeper-servers>
        <node index="1">
            <!-- Ambari HDP ZooKeeper -->
            <host>master</host>
            <port>2181</port>
        </node>
    </zookeeper-servers>
    <!-- 数据压缩算法  -->
    <enable_http_compression>1</enable_http_compression>
    <clickhouse_compression>
        <case>
            <min_part_size>10000000000</min_part_size>
            <min_part_size_ratio>0.01</min_part_size_ratio>
            <method>lz4</method>
        </case>
    </clickhouse_compression>
</yandex>